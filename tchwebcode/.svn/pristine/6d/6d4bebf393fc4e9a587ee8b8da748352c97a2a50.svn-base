/* 登录 */

.login_header{
    position: relative;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}
.login_con{
    height: 100%;
    width: 100%;
    padding: 1rem 0.4rem 0rem 0.4rem;
    box-sizing: border-box;
    background: #fff;
}
/* 注册 */
.header_register{
    position: absolute;
    display: block;
    width: auto;
    padding: 0rem 0.2rem;
    color: #749150;
    font-size: 0.32rem;
    right: 0.1rem;
    top: 0rem;
}

.login_userBox{
    border-bottom: 1px solid #e3e3e3;
    width: 100%;
    /* margin: .2rem auto 0 auto; */
    height: 1rem;
    line-height: 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.login_userBox>input{
    outline: none;
    border: none;
    width: 100%;
    height: 100%;
    font-size: 0.28rem;
    padding-left: 0.2rem;
}
.login_userBox>input::-webkit-input-placeholder{
    font-size: 0.28rem;
    color: #999999;
}

.btn_login{
    height: 0.8rem;
    line-height: 0.8rem;
    font-size: 0.32rem;
    background-color:#84a539;
    text-align: center;
    color: white;
    margin-top: 0.8rem;
    width: 100%;
    border-radius: 4px;
}
.small_tip{
    width: 100%;
    margin: .3rem 0rem 2.8rem 0rem;
    font-size: 0.2rem;
    color: #999999;
}
.spec_tip{
    color: #84a539;
    font-size: 12px;
}



/* 底部微信登录 */
.login_underLine{
    width: 100%;
    text-align: center;
    color: #999999;
    font-size: 0.28rem;
}
.weixin_box{
    text-align: center;
    font-size: 0;
}
.weixin_box>p{
    font-size: 0.24rem;
    color: #999999;
}
.weixin{
    margin: .6rem auto 0.2rem auto;
    width: 1rem;
}

/* 提示 */
.login_tishi{
    color: #999999;
    font-size: 0.2rem;
    width: 100%;
    text-align: center;
    margin-top: 0.5rem;
}









/* 注册 */
.register_con{
    background: #fff;
}

.register_header{
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}


/* 内容 */
.register_ul{
    width: 100%;
    padding: 0rem 0.4rem;
    box-sizing: border-box;
    margin-bottom: 0.7rem;
}
.register_li{
    width: 100%;
    height: 1rem;
    border-bottom: 1px solid #f5f4f7;
    line-height: 1rem;
    box-sizing: border-box;
    font-size: 0.28rem;
}
.register_input{
    width: 100%;
    height: 100%;
    padding-left: 0.1rem;
    box-sizing: border-box;
    outline: none;
    border: none;
}


/* 验证码 */
.code_li{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.register_code{
    width: 75%;
}
.register_code_p{
    height: 100%;
    color: #749150;
    font-size: 0.24rem;
}


/* 注册按钮 */
.register_bot{
    width: 90%;
    height: 0.8rem;
    background: #84a539;
    line-height: 0.8rem;
    text-align: center;
    border-radius: 5px;
    margin: 0 auto;
    color: #fff;
    font-size: 0.32rem;
    margin-bottom: 0.5rem;
}



/* 协议 */
.agreement_p{
    width: 90%;
    margin: 0 auto;
    color: #999999;
    font-size: 0.2rem;
    line-height: 0.35rem;
}
.agreement{
    color: #749150;
}




