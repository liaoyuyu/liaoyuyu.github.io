.classify_second_header{
    /* position: relative; */
    overflow: hidden;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}
/* 筛选 */
.classify_screen_function{
    width: 100%;
    position: fixed;
    top: 0.9rem;
    left: 0;
    z-index: 999;
}
.classify_second_top_com{
    top: 1.6rem;
}

/* 相关基地 */
.relevant_base_title{
    width: 100%;
    height: 0.8rem;
    line-height: 0.8rem;
    text-align: center;
    position: relative;
}
.relevant_base_title p{
    color: #333333;
    font-size: 0.3rem;
    font-weight: bold;
}
.relevant_base_title span{
    position: absolute;
    width: 0.5rem;
    height: 0.05rem;
    background: #7ea83a;
    left: 50%;
    margin-left: -0.25rem;
    top: 50%;
    margin-top: 0.23rem;
}
.relevant_base{
    width: 100%;
    background: #fff;
}
.relevant_base_con{
    padding: 0rem 0.2rem;
    box-sizing: border-box;
    width: 100%;
    overflow: hidden;
}


