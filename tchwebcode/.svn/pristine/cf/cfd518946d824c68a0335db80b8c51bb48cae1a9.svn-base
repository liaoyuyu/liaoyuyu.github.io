.account_security_header{
    position: relative;
    margin-bottom: 0.15rem;
}

/* 内容 */
.account_security_con{
    width: 100%;
    padding-top: 0.2rem;
}
.account_ul{
    width: 100%;
    background: #fff;
    font-size: 0;
}
.account_li{
    width: 100%;
    padding: 0rem 0.4rem;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 1rem;
    line-height: 1rem;
    overflow: hidden;
}
.li_left{
    color: #333333;
    font-size: 0.32rem;
}
.li_right{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.right_p{
    height: 1rem;
    color: #999999;
    font-size: 0.32rem;
    text-align: right;
    border: none;
    outline: none;
}
.right_img{
    width: 0.12rem;
    height: 0.25rem;
    margin-left: 0.1rem;
}
.li_a{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0rem 0.4rem;
    box-sizing: border-box;
}



/* 头像 */
.portrait_li{
    height: 1.8rem;
    line-height: 1.8rem;
}
.portraitbox{
    width: 1.4rem;
    height: 1.4rem;
    border-radius: 100%;
    overflow: hidden;
    font-size: 0;
    position: relative;
    border: 1px solid #eee;
    box-sizing: border-box;
}

.portraitbox img{
    width: 100%;
    height: 100%;
}
.account_upload{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}
/* 手机号 */
.phone_li{
    padding: 0;
}
.account_phone{
    color: #333333;
}





/* 性别弹出框 */
.sex_box{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    
    transition: all 0.3s;
    opacity: 0;
}
.sex_box_anim{
    opacity: 1;
}
.sex_back{
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}
.sex_frame{
    width: 60%;
    height: 3.86rem;
    background: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -30%;
    margin-top: -1.93rem;
    padding: 0.5rem;
    border-radius: 5px;
    box-sizing: border-box;
    overflow: hidden;
}
/* 头部 */
.sex_tit{
    color: #333333;
    font-size: 0.43rem;
    margin-bottom: 0.2rem;
}
/* 选项 */
.sex_list{
    width: 100%;
    height: 1rem;
    line-height: 1rem;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0rem 0.2rem;
    box-sizing: border-box;
}
.sex_list:nth-of-type(1){
    border-bottom: 1px solid #999999;
}
.list_p{
    color: #333333;
    font-size: 0.32rem;
}
.list_option{
    display: block;
    width: 0.3rem;
    height: 0.3rem;
    border: 1px solid #999999;
    border-radius: 100%;
    box-sizing: border-box;
}

/* 选中状态 */

.option{
    /* background: url(../images/icon/set.png) no-repeat center; */
    background-size: 200%;
}







